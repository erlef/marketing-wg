        </mj-column>
      </mj-section>
      <mj-section background-color="#1f2c34" padding="0 24px">
        <mj-column>
          <mj-divider />
        </mj-column>
      </mj-section>
      <!-- ========================= -->
      <!-- SECTION: Coming up        -->
      <!-- ========================= -->
